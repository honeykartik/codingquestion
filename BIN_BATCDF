#include <iostream>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--)
    {
        int a,b,c;
        int s=0;
        cin>>a>>b>>c;
        while(a!=1)
        {
            s+=b+c;
            a/=2;
        }
        cout<<s-c<<endl;
    }
	// your code goes herereturn 0;
}
